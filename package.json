{
  "name": "mercurial-potato",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdpalumbo/mercurial-potato.git"
  },
  "engines": {
    "npm": "5.5.1",
    "node": "8.9.3"
  },
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "npm run watch",
    "dev": "npm run build-dev && export $(egrep -v '^#' dev.env | xargs) && npm run watch-dev",
    "build": "npm run tslint && npm run build-ts",
    "build-dev": "npm run clean-dist && npm run tslint && npm run build-ts",
    "prepare": "check-node-version --package",
    "clean-dist": "rm -r dist/",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run serve\"",
    "watch-dev": "concurrently -k -p \"[{name}]\" -n \"Docker,TypeScript,Jest\" -c \"yellow.bold,cyan.bold,green.bold\" \"docker-compose up\" \"npm run watch-ts\" \"npm run watch-test\"",
    "watch-test": "jest --watch --coverage",
    "test": "jest --forceExit --coverage",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "jest": {
    "globals": {
      "ts-jest ": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/presentation/**/*.ts",
      "src/domain/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "async": "^2.1.2",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-flash": "^0.0.2",
    "express-session": "^1.14.2",
    "express-validator": "^3.1.3",
    "lodash": "^4.17.4",
    "lusca": "^1.4.1",
    "morgan": "^1.7.0",
    "mysql": "^2.15.0",
    "reflect-metadata": "^0.1.10",
    "request": "^2.78.0",
    "sqlite3": "^3.1.13",
    "typeorm": "^0.1.9"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.2",
    "@types/compression": "0.0.33",
    "@types/connect-mongo": "0.0.32",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/jest": "^19.2.2",
    "@types/jquery": "^2.0.41",
    "@types/lodash": "^4.14.63",
    "@types/mongodb": "^2.1.43",
    "@types/mongoose": "^4.7.9",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.12",
    "@types/nodemailer": "^1.3.32",
    "@types/passport": "^0.3.3",
    "@types/passport-facebook": "^2.1.3",
    "@types/request": "0.0.45",
    "@types/supertest": "^2.0.0",
    "check-node-version": "^1.1.0",
    "concurrently": "^3.4.0",
    "jest": "^21.2.1",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "tslint": "^5.0.0",
    "typescript": "^2.4.0"
  }
}
